<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spacex" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/gold</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Widget.Spacex.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.Spacex.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Spacex.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:capitalize">sentences</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Spacex.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.Spacex</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Spacex.Toolbar</item>
    </style>

    <style name="TextAppearance.Spacex.Toolbar" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--    card-->
    <style name="Widget.Spacex.CardView" parent="Widget.MaterialComponents.CardView">
        <!--        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.Spacex.MediumComponent</item>
    </style>


    <style name="ShapeAppearance.Spacex.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
    </style>

    <style name="Widget.Spacex.CardView.title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Spacex.CardView.body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Spacex.text.white" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Spacex.text.white.bold" parent="Widget.Spacex.text.white">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.SpaceX.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.SpaceX.CornerSize5Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>


</resources>